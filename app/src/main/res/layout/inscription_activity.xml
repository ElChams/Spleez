<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.slpeez.spleez.MainActivity"
    android:background="@drawable/water">


    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/Logo"
        android:background="@drawable/logo"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:baselineAlignBottom="false"
        android:clickable="false"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView6"
        android:layout_above="@+id/editText"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:id="@+id/BoutonConnexion"
        android:contentDescription="BoutonConnexion"
        android:background="@drawable/boutonrounded"
        android:layout_marginBottom="43dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/textView2"
        android:layout_toEndOf="@+id/Logo" />

    <ImageButton
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:paddingLeft= "10dp"
        android:paddingRight= "10dp"
        android:id="@+id/imageButton"
        android:background="#76ffffff"
        android:layout_alignTop="@+id/editText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/imageView13"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:id="@+id/imageButton2"
        android:background="#71ffffff"
        android:layout_below="@+id/imageButton5"
        android:layout_alignEnd="@+id/imageButton5"
        android:layout_alignParentStart="true" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/mdp"
        android:text="Password"
        android:layout_marginLeft="10dp"
        android:background="#00ffffff"
        android:layout_alignBottom="@+id/imageButton2"
        android:layout_alignEnd="@+id/imageButton5" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Créer ton compte "
        android:id="@+id/textView2"
        android:layout_alignBottom="@+id/BoutonConnexion"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:textColor="#FFFF"
        android:layout_marginBottom="10dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView12"
        android:background="@drawable/spleez"
        android:layout_marginTop="35dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView13"
        android:background="@drawable/textconnexion"
        android:layout_below="@+id/imageView12"
        android:layout_toEndOf="@+id/Logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Confirmez le mot de passe"
        android:id="@+id/textView3"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/imageButton5"
        android:textColor="#FFFF"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/imageButton2"
        android:layout_toStartOf="@+id/mdp" />

    <ImageButton
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:id="@+id/imageButton3"
        android:background="#76ffffff"
        android:layout_below="@+id/imageButton"
        android:layout_alignEnd="@+id/imageButton"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editText7"
        android:layout_below="@+id/imageButton"
        android:layout_alignEnd="@+id/imageButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Prénom"
        android:textColor="#FFFF"
        android:id="@+id/textView17"
        android:enabled="true"
        android:layout_alignTop="@+id/imageButton"
        android:layout_alignStart="@+id/textView20" />

    <ImageButton
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:id="@+id/imageButton4"
        android:background="#76ffffff"
        android:layout_below="@+id/imageButton3"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/editText7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Nom:"
        android:textColor="#FFFF"
        android:id="@+id/textView"
        android:enabled="true"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/imageButton"
        android:layout_alignEnd="@+id/Logo" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editText8"
        android:layout_alignTop="@+id/imageButton4"
        android:layout_alignStart="@+id/editText7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Email"
        android:textColor="#FFFF"
        android:id="@+id/textView20"
        android:enabled="true"
        android:layout_below="@+id/imageButton3"
        android:layout_alignStart="@+id/textView" />

    <ImageButton
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:id="@+id/imageButton5"
        android:background="#76ffffff"
        android:layout_below="@+id/imageButton4"
        android:layout_alignEnd="@+id/imageButton4"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Mot de passe"
        android:textColor="#FFFF"
        android:id="@+id/textView19"
        android:enabled="true"
        android:layout_below="@+id/imageButton4"
        android:layout_alignEnd="@+id/textView17" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editText9"
        android:layout_below="@+id/imageButton4"
        android:layout_alignStart="@+id/editText8"
        android:layout_alignEnd="@+id/imageButton4" />


</RelativeLayout>
