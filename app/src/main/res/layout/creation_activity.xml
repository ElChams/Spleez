<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingTop="0dp"
        tools:context="com.slpeez.spleez.CreerParticiper_Activity">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView3"
            android:background="@drawable/prairie"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

        <ImageView
            android:layout_width="350dp"
            android:layout_height="400dp"
            android:id="@+id/imageView10"
            android:background="#d43b4656"
            android:layout_marginRight="10dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/buttonprofil"
            android:layout_above="@+id/annuler" />


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPostalAddress"
            android:ems="10"
            android:id="@+id/editText2"
            android:layout_marginTop="63dp"
            android:layout_below="@+id/activityname"
            android:layout_toStartOf="@+id/valider" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/editText3"
            android:layout_below="@+id/editText2"
            android:layout_alignStart="@+id/editText2" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/editText4"
            android:layout_below="@+id/editText3"
            android:layout_alignStart="@+id/editText3" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText5"
            android:layout_below="@+id/editText4"
            android:layout_alignStart="@+id/editText4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Ou ?"
            android:textColor="#FFFFFFFF"
            android:id="@+id/adresse"
            android:layout_alignBottom="@+id/editText2"
            android:layout_toStartOf="@+id/editText2"
            android:layout_marginBottom="10dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Nom de l&apos;activitÃ©"
            android:ems="10"
            android:textColor="#FFFFFFFF"
            android:id="@+id/activityname"
            android:layout_alignTop="@+id/imageView10"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Quand ?"
            android:textColor="#FFFFFFFF"
            android:id="@+id/textView4"
            android:layout_above="@+id/editText4"
            android:layout_toStartOf="@+id/editText3"
            android:layout_marginBottom="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="L&apos;heure ?"
            android:textColor="#FFFFFFFF"
            android:id="@+id/textView5"
            android:layout_above="@+id/editText5"
            android:layout_toStartOf="@+id/editText5"
            android:layout_marginBottom="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Combien ?"
            android:textColor="#FFFFFFFF"
            android:id="@+id/textView6"
            android:layout_alignBottom="@+id/editText5"
            android:layout_toStartOf="@+id/editText4"
            android:layout_marginBottom="10dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/annuler"
            android:background="@drawable/annuler"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/valider"
            android:background="@drawable/valider"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/editText6"
            android:text="                                                                                       "
            android:background="#526566"
            android:layout_below="@+id/editText5"
            android:layout_above="@+id/annuler"
            android:layout_alignStart="@+id/imageView10"
            android:layout_alignEnd="@+id/imageView10" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Commentaire"
            android:textColor="#FFFFFFFF"
            android:id="@+id/textView18"
            android:layout_below="@+id/editText5"
            android:layout_alignStart="@+id/editText6"
            android:layout_marginTop="10dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/barmenu"
            android:id="@+id/linearLayout2"
            android:weightSum="1"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/spleez"
                android:background="@drawable/logo"
                android:layout_marginLeft="30dp" />

            <ImageButton
                android:layout_width="29dp"
                android:layout_height="wrap_content"
                android:id="@+id/logoamis"
                android:background="@drawable/logoamis"
                android:contentDescription=""
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/imageView8"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="60dp" />

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/logoevent"
                android:background="@drawable/logoevenement"
                android:layout_marginLeft="60dp"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/noteuser"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <ImageView
            android:layout_width="160dp"
            android:layout_height="7dp"
            android:id="@+id/imageView9"
            android:background="@drawable/barselectmenu"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/linearLayout2" />

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/buttonprofil"
            android:background="@drawable/ptofilicone"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#333"
        android:choiceMode="singleChoice"
        android:divider="#AAA"
        android:dividerHeight="1dp"
        android:orientation="vertical">
        <include layout="@layout/navigation_drawer"/>
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>
